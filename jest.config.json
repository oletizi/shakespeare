{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/test"
  ],
  "testMatch": [
    "**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "/test/smoke/"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "module": "ES2022",
        "target": "ES2022"
      }
    }
  }
}
