{
  "name": "@oletizi/shakespeare",
  "version": "1.4.5",
  "description": "AI-driven content review and improvement system with configurable content collection support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shakespeare": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "node build.js",
    "build:old": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest test/integration",
    "test:smoke": "jest test/smoke --testTimeout=90000",
    "discover-content": "node dist/scripts/discoverContent.js",
    "review-content": "node dist/scripts/reviewContent.js",
    "update-content-index": "node dist/scripts/updateContentIndex.js",
    "improve-content": "node dist/scripts/improveContent.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepack": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "postpublish": "echo 'âœ… Published @oletizi/shakespeare@'$npm_package_version' to npm registry'",
    "version": "npm run build && git add -f dist",
    "postversion": "git push && git push --tags",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "content",
    "ai",
    "review",
    "markdown",
    "mdx",
    "astro",
    "nextjs",
    "gatsby",
    "content-collections",
    "static-site-generator",
    "typescript",
    "goose"
  ],
  "author": "Orion Letizi",
  "license": "ISC",
  "homepage": "https://github.com/oletizi/shakespeare#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oletizi/shakespeare.git"
  },
  "bugs": {
    "url": "https://github.com/oletizi/shakespeare/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "winston": "^3.17.0"
  }
}
